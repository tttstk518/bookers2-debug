<div class="cover-user-index">
  <div class="container">
    <div class="row justify-content-center">
    <h1 class="font-weight-normal mt-5 mb-5">Follow Users</h1>
    </div>
    <div class="row justify-content-center">
      <% @users.each do |user| %>
      <div class="one-post card w-100">
        <%= link_to user_path(user) do %>
        <p class="caption h4"><%= user.name %></p>
        <div class="d-flex">
          <%= image_tag user.get_profile_image %>
        </div>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>