<% book.book_comments.each do |book_comment| %>
    <p><%= image_tag book_comment.user.get_profile_image(100,100) %></p>
    <%= book_comment.user.name %>
    <% book.book_comment %>
<% end %>

<% if book_comments.user == current_user %>
  <%= link_to 'Destroy', book_book_comment_path(book_comments.book, book.id) , method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
<% end %>
